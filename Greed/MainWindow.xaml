<Window x:Class="Greed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dc ="clr-namespace:Greed.Models"
        xmlns:views="clr-namespace:Greed.UserControls"
        mc:Ignorable="d"
        Title="Greed" ui:ThemeManager.RequestedTheme="Dark"
        Height="700" Width="1225" MinHeight="700" MinWidth="1225"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Icon="Resources/SVMLOGO.png" Closing="WindowClosing" WindowStyle="None" MouseLeftButtonDown="Dragger" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style x:Key="BackgroundGrid" TargetType="Grid">
            <Setter Property="Opacity" Value="0"/>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="FontFamily" Value="{StaticResource Bender}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFC5C3B2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC5C3B2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Cultist1080.png"/>
    </Window.Background>
    <Grid Margin="10,10,0,0" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="255"/>
            <ColumnDefinition Width="187"/>
            <ColumnDefinition Width="633"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="2,8,0,0" Opacity="1" FontWeight="Bold" FontFamily="{StaticResource Bender}" Foreground="#FFC5C3B2" Text="Greed | Made in Ukraine" VerticalAlignment="Top" FontSize="18"/>
        <Menu HorizontalAlignment="Left" Opacity="1" Padding="0,8,0,0" Grid.Column="1" Height="40" Grid.ColumnSpan="2">
            <MenuItem Header="{DynamicResource Options}">
                <MenuItem Header="{DynamicResource LoadLast}" IsCheckable="True" Name="LoadLast" Click="LoadLast_Click"/>
                <MenuItem Header="{DynamicResource RunServerAndLauncher}" Click="RunEverything"/>
                <MenuItem Header="{DynamicResource CloseServerAndLauncher}" Click="CloseEverything"/>
                <MenuItem Header="{DynamicResource PresetFolder}" Click="PresetFolder"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Changelog}" Click="ChangelogOpen"/>
            <MenuItem Header="{DynamicResource Links}">
                <MenuItem Header="{DynamicResource SPTHUB}" Click="SPTDiscord"/>
                <MenuItem Header="{DynamicResource SPTWEB}" Click="SPTWEB"/>
                <MenuItem Header="{DynamicResource ModWeb}" Click="ModLink"/>
                <MenuItem Header="{DynamicResource WikiPage}" Click="WikiPage"/>
                <MenuItem Header="{DynamicResource ItemIDWeb}" Click="ItemFinder"/>
                <MenuItem Header="{DynamicResource GitHub}" Click="GitHubLink"/>
                <MenuItem Header="{DynamicResource KoFi}" Click="KofiLink"/>
                <MenuItem Header="{DynamicResource Fika}" Click="FikaDiscord"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Info}">
                <MenuItem Header="{DynamicResource Disclaimer}" Click="Disclaimer"/>
                <MenuItem Header="{DynamicResource ThanksTo}" Click="ThanksTo"/>
                <MenuItem Header="{DynamicResource License}" Click="License"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Language}">
                <MenuItem Header="English" Tag="en-US" Click="LangSwitchClick"/>
                <MenuItem Header="한국어" Tag="ko-KR" Click="LangSwitchClick"/>
                <MenuItem Header="简体中文" Tag="zh-CN" Click="LangSwitchClick"/>
                <MenuItem Header="Русский" Tag="ru-RU" Click="LangSwitchClick"/>
                <MenuItem Header="Українська" Tag="uk-UA" Click="LangSwitchClick"/>
                <MenuItem Header="Español" Tag="es-ES" Click="LangSwitchClick"/>
            </MenuItem>
        </Menu>
        <DockPanel Grid.Column="3" Width="140">
            <Button Width="45"  Click="AppMinimize">
                <StackPanel Orientation="Horizontal" Width="30">
                    <Image Source="Resources/Icons/icon_Down.png" Width="30" Height="25" HorizontalAlignment="Center"/>
                    <TextBlock Style="{StaticResource TabText}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button  Width="45"   Click="AppMaximize" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Width="30">
                    <Image Source="Resources/Icons/icon_Up.png" Width="30" Height="25"/>
                    <TextBlock Style="{StaticResource TabText}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button  Width="45"  Click="AppClose" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Width="30">
                    <Image Source="Resources/Icons/icon_button_logout_over.png" Width="30" Height="25" HorizontalAlignment="Center"/>
                    <TextBlock Style="{StaticResource TabText}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </DockPanel>
        <TabControl TabStripPlacement="Left" Grid.Row="1" BorderThickness="2" BorderBrush="LightGray" Grid.ColumnSpan="4">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources/Icons/icon_system_big.png" Height="30"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource MainPage}" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <RichTextBox Cursor="Arrow" Name="WelcomeMessage" Focusable="False" IsReadOnly="True" Foreground="{x:Null}" SelectionTextBrush="{x:Null}"  BorderThickness="0,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources/Icons/icon_random_big.png" Height="30"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource faq}" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <RichTextBox Cursor="Arrow" VerticalScrollBarVisibility="Visible" Name="RTF1" IsReadOnly="True" Foreground="{x:Null}" Background="{x:Null}" SelectionBrush="White" BorderBrush="{x:Null}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources/Icons/icon_library.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Notes}" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <TextBlock Text="{DynamicResource PresetInitialText}"/>
                    <TextBox IsInactiveSelectionHighlightEnabled="True" TextWrapping="Wrap" AcceptsReturn="True"  Text="{Binding PresetNotes}" Height="550" Background="{x:Null}" BorderBrush="{x:Null}"/>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_stash.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Items}" VerticalAlignment="Center"/>
                        <CheckBox  Style="{StaticResource SectionSwitch}" IsChecked="{Binding Items.EnableItems, Mode=TwoWay}" FontWeight="Normal" FontSize="18" />
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Items/>
                </ScrollViewer>
            </TabItem>
            <TabItem Name="Hideout">
                <TabItem.Header>
                    <DockPanel Height="34" VerticalAlignment="Center">
                        <Image Source="Resources/Icons/hideout_icon_black.png" />
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Hideout}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Hideout.EnableHideout}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Hideout/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_bitcoinfarm.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Traders}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Traders.EnableTraders}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Traders/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_workbench.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Services}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Services.EnableServices}" />
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Services/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_statscategory_looting.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Loot}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Loot.EnableLoot}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Loot/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_profile_big.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Player}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Player.EnablePlayer}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Player/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image  Source="Resources/Icons/extraction_point_icon_human_white.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Raid}" VerticalAlignment="Center"/>
                        <CheckBox  Style="{StaticResource SectionSwitch}" IsChecked="{Binding Raids.EnableRaids}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Raids/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_flea_market.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Fleamarket}"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Fleamarket.EnableFleamarket}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Fleamarket/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_quest.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Quests}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Quests.EnableQuests}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Quests/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_itemtype_cont.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource CSM}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding CSM.EnableCSM}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:CSM/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_scav_case.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource SCAV}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Scav.EnableScav}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Scav/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="Resources/Icons/icon_shooting_range.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Bots}" VerticalAlignment="Center"/>
                        <CheckBox  Style="{StaticResource SectionSwitch}" IsChecked="{Binding Bots.EnableBots}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Bots/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="{DynamicResource PMCIcon}" Height="35" Name="PMCIcon"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource PMC}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding PMC.EnablePMC}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:PMC/>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <DockPanel>
                        <Image Source="/Resources/Icons/icon_placeoffame_old.png"/>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource AdvFeatures}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource SectionSwitch}" IsChecked="{Binding Custom.EnableCustom}"/>
                    </DockPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <views:Custom/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="4" VerticalAlignment="Top">
            <Button Margin="5" Width="250" Click="Apply_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/icon_survived_big.png" Width="30" Height="30"/>
                    <TextBlock Name="Apply" Style="{StaticResource TabText}" Text="{DynamicResource ApplyButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Margin="5,0,15,0" Width="auto" Click="SavePreset">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/Trade_Sell_Icon_Idle.png" Width="35" Height="30"/>
                    <TextBlock Margin="0,0,5,0" Name="Save" Style="{StaticResource TabText}" Text="{DynamicResource SaveButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Margin="0,0,15,0" Name="LoadButton" Width="auto" Click="LoadPreset">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/Trade_BuyTab_Icon_Idle.png" Width="35" Height="30"/>
                    <TextBlock Margin="0,0,5,0" Name="Load" Style="{StaticResource TabText}" Text="{DynamicResource LoadButton}" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <ComboBox Name="Presets" Width="350" Height="30"  PreviewTextInput="TextValidationTextBox" VerticalAlignment="Center" IsEditable="True"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Grid.Column="3" Margin="0,0,15,15" FontWeight="Bold" FontFamily="{StaticResource Bender}" Foreground="#FFC5C3B2" Style="{StaticResource TabText}" TextWrapping="Wrap" Text="Version № 2.1.0" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
