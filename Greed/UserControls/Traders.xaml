<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Greed.UserControls"
             xmlns:ui="http://schemas.modernwpf.com/2019" x:Class="Greed.UserControls.Traders"
             mc:Ignorable="d">
    <Grid>
        <Grid Style="{StaticResource Enablers}" Margin="5" IsEnabled="{Binding Traders.EnableTraders}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="540"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <Expander>
                    <Expander.Header>
                        <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Misc}" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    </Expander.Header>
                    <StackPanel Margin="10">
                        <DockPanel Margin="5,5,0,5">
                            <TextBlock Margin="0,0,0,5" Width="200" TextWrapping="Wrap" Text="{DynamicResource TraderOffers}" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <ui:NumberBox Width="120" Value="{Binding Traders.CurrencyOffers}"  Style="{StaticResource Mults}">
                                <ui:NumberBox.Header>
                                    <TextBlock HorizontalAlignment="Center" Text="{DynamicResource CurrencyOffers}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Width="120" Value="{Binding Traders.BarterOffers}" Style="{StaticResource Mults}">
                                <ui:NumberBox.Header>
                                    <TextBlock HorizontalAlignment="Center" Text="{DynamicResource BarterOffers}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel Margin="5,5,0,5">
                            <TextBlock Width="200" TextWrapping="Wrap" Text="{DynamicResource TraderRestrictions}" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <ui:NumberBox Width="120"  VerticalAlignment="Center" Value="{Binding Traders.CurrencyRestrictions}" Style="{StaticResource Mults}"/>
                            <ui:NumberBox Width="120" VerticalAlignment="Center" Value="{Binding Traders.BarterRestrictions}" Style="{StaticResource Mults}"/>
                        </DockPanel>
                        <DockPanel Margin="5,5,0,5">
                            <TextBlock Margin="0,0,0,5" Width="200" VerticalAlignment="Bottom" TextWrapping="Wrap" Text="{DynamicResource QuestRedeemTime}" HorizontalAlignment="Left"/>
                            <ui:NumberBox Width="120" Value="{Binding Traders.QuestRedeemDefault}" Minimum="6" Maximum="144" Style="{StaticResource FlatsSmall}">
                                <ui:NumberBox.Header>
                                    <TextBlock HorizontalAlignment="Center" Text="{DynamicResource Default}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Width="120" Value="{Binding Traders.QuestRedeemUnheard}" Minimum="6" Maximum="144" Style="{StaticResource FlatsSmall}">
                                <ui:NumberBox.Header>
                                    <TextBlock HorizontalAlignment="Center" Text="{DynamicResource Unheard}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <ui:NumberBox Margin="5,5,0,5" Value="{Binding Traders.MinDurabSell}" Style="{StaticResource MinMax}">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource MinDurabSell}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <ui:NumberBox Margin="5,5,0,5" Value="{Binding Traders.PlantingTime}" Style="{StaticResource Mults}">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource PlantingTime}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <CheckBox Content="{DynamicResource UnlockJaeger}" IsChecked="{Binding Traders.UnlockJaeger}"/>
                        <CheckBox Content="{DynamicResource UnlockRef}" IsChecked="{Binding Traders.UnlockRef}"/>
                        <CheckBox Content="{DynamicResource RandomizeAssort}" IsChecked="{Binding Traders.RandomizeAssort}" ToolTip="{DynamicResource RandomizeAssort_TT}"/>
                        <CheckBox Content="{DynamicResource FIRTrade}" IsChecked="{Binding Traders.FIRTrade}"/>
                        <CheckBox Content="{DynamicResource AllQuestsAvailable}" ToolTip="{DynamicResource AllQuestsAvailable_TT}" Foreground="#FFFF3B3B"  IsChecked="{Binding Traders.AllQuestsAvailable}"/>
                        <CheckBox Content="{DynamicResource RemoveTimeCondition}"  IsChecked="{Binding Traders.RemoveTimeCondition}" ToolTip="{DynamicResource RemoveTimeCondition_TT}"/>
                        <CheckBox Content="{DynamicResource TradersLvl4}"  IsChecked="{Binding Traders.TradersLvl4}"/>
                        <CheckBox Content="{DynamicResource FIRRestrictsQuests}" IsChecked="{Binding Traders.FIRRestrictsQuests}"/>
                        <CheckBox Content="{DynamicResource UnlockQuestAssort}" Foreground="#FFFFA73B"  ToolTip="{DynamicResource UnlockQuestAssort_TT}" IsChecked="{Binding Traders.UnlockQuestAssort}"/>
                    </StackPanel>
                </Expander>
                <Expander>
                    <Expander.Header>
                        <DockPanel>
                            <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource FenceSettings}" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                            <CheckBox x:Name="FenceCheck" Style="{StaticResource SectionSwitch}" IsChecked="{Binding Traders.Fence.EnableFence}"/>
                        </DockPanel>
                    </Expander.Header>
                    <StackPanel Margin="10" IsEnabled="{Binding Traders.Fence.EnableFence}">

                        <ui:NumberBox Value="{Binding Traders.Fence.AmountOnSale}" Maximum="600">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource FenceAmountOnSale}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <ui:NumberBox Value="{Binding Traders.Fence.PremiumAmountOnSale}" Maximum="400">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource FencePremiumAmountOnSale}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <ui:NumberBox  Value="{Binding Traders.Fence.PresetCount}" Maximum="30">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource FencePresetCount}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <ui:NumberBox  Value="{Binding Traders.Fence.PriceMult}" Style="{DynamicResource Mults}">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource FencePriceMult}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <ui:NumberBox Value="{Binding Traders.Fence.PresetMult}" Style="{DynamicResource Mults}">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource FencePresetMult}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <DockPanel Margin="0,5,0,5">
                            <TextBlock TextWrapping="Wrap" Text="{DynamicResource FenceGunDurability}" Width="200" VerticalAlignment="Center" Padding="0,20,0,0"/>
                            <ui:NumberBox Value="{Binding Traders.Fence.ArmorDurability_Min}" Maximum="{Binding Traders.Fence.ArmorDurability_Max}" Width="100" Style="{StaticResource MinMax}">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Min}" HorizontalAlignment="Center"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.Fence.ArmorDurability_Max}" Minimum="{Binding Traders.Fence.ArmorDurability_Min}" Width="100" Style="{StaticResource MinMax}">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Max}" HorizontalAlignment="Center"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel Margin="0,5,0,5">
                            <TextBlock TextWrapping="Wrap" Text="{DynamicResource FenceArmorDurability}" Width="200"  VerticalAlignment="Center"/>
                            <ui:NumberBox Value="{Binding Traders.Fence.GunDurability_Min}" Maximum="{Binding Traders.Fence.GunDurability_Max}" Width="100" Style="{StaticResource MinMax}"/>
                            <ui:NumberBox Value="{Binding Traders.Fence.GunDurability_Max}" Minimum="{Binding Traders.Fence.GunDurability_Min}" Width="100" Style="{StaticResource MinMax}"/>
                        </DockPanel>
                        <DockPanel Margin="0,5,0,5">
                            <TextBlock TextWrapping="Wrap" Text="{DynamicResource StockTime}" Width="200"  VerticalAlignment="Center"/>
                            <ui:NumberBox Value="{Binding Traders.Fence.StockTime_Min}" Minimum="5" Maximum="195" Width="100" Style="{StaticResource FlatsSmall}"/>
                            <ui:NumberBox Value="{Binding Traders.Fence.StockTime_Max}" Maximum="200" Minimum="{Binding Traders.Fence.StockTime_Min}" Width="100" Style="{StaticResource FlatsSmall}"/>
                        </DockPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="0">
                <Expander>
                    <Expander.Header>
                        <TextBlock Style="{StaticResource TabText}" ToolTip="{DynamicResource PriceMarkup_TT}" Text="{DynamicResource PriceMarkup}" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    </Expander.Header>
                    <StackPanel Margin="10">
                        <DockPanel>
                            <ui:NumberBox Value="{Binding Traders.TraderMarkup.Prapor}" Style="{DynamicResource MinMax}" Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Prapor}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderMarkup.Therapist}" Style="{DynamicResource MinMax}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Therapist}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel>
                            <ui:NumberBox  Value="{Binding Traders.TraderMarkup.Fence}" Style="{DynamicResource MinMax}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Fence}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox  Value="{Binding Traders.TraderMarkup.Skier}" Style="{DynamicResource MinMax}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Skier}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel>
                            <ui:NumberBox Value="{Binding Traders.TraderMarkup.Peacekeeper}" Style="{DynamicResource MinMax}"   Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Peacekeeper}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderMarkup.Mechanic}" Style="{DynamicResource MinMax}"   Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Mechanic}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel>
                            <ui:NumberBox Value="{Binding Traders.TraderMarkup.Ragman}" Style="{DynamicResource MinMax}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Ragman}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderMarkup.Jaeger}" Style="{DynamicResource MinMax}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Jaeger}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <ui:NumberBox Value="{Binding Traders.TraderMarkup.Ref}" HorizontalAlignment="Left" Style="{DynamicResource MinMax}"  Width="150">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource Ref}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                    </StackPanel>
                </Expander>
                <Expander>
                    <Expander.Header>
                        <TextBlock Style="{StaticResource TabText}" ToolTip="{DynamicResource PriceAssort_TT}" Text="{DynamicResource PriceAssort}" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                    </Expander.Header>
                    <StackPanel Margin="10">
                        <DockPanel>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Prapor}" Style="{StaticResource Mults}" Width="150" >
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Prapor}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Therapist}" Style="{StaticResource Mults}" Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Therapist}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel>
                            <ui:NumberBox  Value="{Binding Traders.TraderSell.Skier}" Style="{StaticResource Mults}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Skier}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Peacekeeper}" Style="{StaticResource Mults}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Peacekeeper}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Ragman}" Style="{StaticResource Mults}" Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Ragman}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Jaeger}" Style="{StaticResource Mults}" Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Jaeger}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                        <DockPanel>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Mechanic}" Style="{StaticResource Mults}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Mechanic}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                            <ui:NumberBox Value="{Binding Traders.TraderSell.Ref}" Style="{DynamicResource Mults}"  Width="150">
                                <ui:NumberBox.Header>
                                    <TextBlock Text="{DynamicResource Ref}"/>
                                </ui:NumberBox.Header>
                            </ui:NumberBox>
                        </DockPanel>
                    </StackPanel>
                </Expander>
                <Expander>
                    <Expander.Header>
                        <DockPanel>
                            <TextBlock Style="{StaticResource TabText}" Text="{DynamicResource Lightkeeper}" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
                            <CheckBox  Style="{StaticResource SectionSwitch}" IsChecked="{Binding Traders.LightKeeper.EnableLightKeeper}"/>
                        </DockPanel>
                    </Expander.Header>
                    <StackPanel x:Name="LightKeeperSection" Margin="10" IsEnabled="{Binding Traders.LightKeeper.EnableLightKeeper}">
                        <ui:NumberBox Margin="5,5,0,5" Value="{Binding Traders.LightKeeper.AccessTime}" Minimum="1" Maximum="120" Style="{StaticResource MinMax}">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource LightKeeperEntry}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                        <ui:NumberBox Margin="5,5,0,5" Value="{Binding Traders.LightKeeper.LeaveTime}" Minimum="1" Maximum="10" Style="{StaticResource MinMax}">
                            <ui:NumberBox.Header>
                                <TextBlock Text="{DynamicResource LightKeeperLeave}" ToolTip="{DynamicResource LightKeeperLeave_TT}"/>
                            </ui:NumberBox.Header>
                        </ui:NumberBox>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
